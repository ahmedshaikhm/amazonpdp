{
  "manifest_version": 3,
  "name": "Amazon PDP Finder",
  "version": "1.0",
  "description": "Find details of Amazon Product Detail Page (PDP).",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://*.amazon.nl/*",
    "https://*.amazon.se/*",
    "https://*.amazon.pl/*",
    "https://*.amazon.com.au/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.in/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.com.mx/*",
    "https://*.amazon.com.br/*",
    "https://*.amazon.cn/*",
    "https://*.amazon.sg/*",
    "https://*.amazon.sa/*",
    "https://*.amazon.ae/*",
    "https://*.amazon.com.tr/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
